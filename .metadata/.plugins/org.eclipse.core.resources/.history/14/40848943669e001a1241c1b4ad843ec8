#ifndef LIN_CONFIG_H_
#define LIN_CONFIG_H_

#include "STD_TYPES.h"

#define NUMBER_OF_SLOTS                            2
#define NUMBER_OF_MESSAGES                         2
#define LIN_OVER_USART_CHANNEL                     USART1
#define MESSAGE_Owner                              0
#define MESSAGE_LISTENER                           1

typedef struct
{
	u8 MessageID;
	u8 SlotTime;
}SlotStruct_t;

typedef struct
{
	u8 MessageID;
	u8 Authority;
}MsgStruct_t;

extern volatile SlotStruct_t SlotsArray[NUMBER_OF_SLOTS];

#endif /* LIN_CONFIG_H_ */
